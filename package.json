{
  "name": "mcp-strava",
  "version": "1.0.1",
  "type": "module",
  "description": "MCP server for Strava API integration",
  "main": "dist/index.js",
  "bin": {
    "mcp-strava": "dist/index.js",
    "mcp-strava-auth": "dist/auth-server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "postbuild": "chmod +x dist/index.js && chmod +x dist/auth-server.js",
    "start": "node dist/index.js",
    "auth": "tsx src/auth-server.ts"
  },
  "keywords": [
    "mcp",
    "strava",
    "model-context-protocol",
    "claude",
    "ai",
    "fitness",
    "cycling",
    "running"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrienlupo/mcp-strava.git"
  },
  "homepage": "https://github.com/adrienlupo/mcp-strava#readme",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "json-bigint": "^1.0.0",
    "zod": "^4.3.5",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/json-bigint": "^1.0.4",
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
